'use strict'; // Make sure you don't have syntax errors

// var app = angular.module('appName', ['oneDependency']);
var app = angular.module('umam-me', ['ngRoute', 'infinite-scroll', 'ngFileUpload', 'wu.masonry']);

app.config(['$routeProvider', '$locationProvider', function($routeProvider, $locationProvider) {
  // Configure Angular Routes
  $routeProvider.
    when('/', {
      templateUrl: "<%= asset_path('static_pages/index.html') %>",
      controller: 'StaticPagesCtrl'
    }).
    when('/login', {
      templateUrl: "<%= asset_path('users/login.html') %>",
      controller: 'LoginCtrl'
    }).
    when('/signup', {
      templateUrl: "<%= asset_path('users/signup.html') %>",
      controller: 'SignUpCtrl'
    }).
    when('/dishes', {
      templateUrl: "<%= asset_path('dishes/index.html') %>",
      controller: "DishesIndexCtrl"
    }).
    when('/dishes/:id', {
      templateUrl: "<%= asset_path('dishes/show.html')%>", 
      controller: "DishesShowCtrl"
    }).
    when('/dish/new', {
      templateUrl: "<%= asset_path('dishes/create.html')%>", 
      controller: "DishesCreateCtrl"
    }).
    when('/restaurants', {
      templateUrl: "<%= asset_path('restaurants/index.html') %>",
      controller: "RestaurantsIndexCtrl"
    }).
}]);
